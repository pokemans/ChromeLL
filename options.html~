function backupConfig(){
	var Base64 = {
	_keyStr : "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/=",
	encode : function (input) {
		var output = "";
		var chr1, chr2, chr3, enc1, enc2, enc3, enc4;
		var i = 0;
 
		input = Base64._utf8_encode(input);
 
		while (i < input.length) {
 
			chr1 = input.charCodeAt(i++);
			chr2 = input.charCodeAt(i++);
			chr3 = input.charCodeAt(i++);
 
			enc1 = chr1 >> 2;
			enc2 = ((chr1 & 3) << 4) | (chr2 >> 4);
			enc3 = ((chr2 & 15) << 2) | (chr3 >> 6);
			enc4 = chr3 & 63;
 
			if (isNaN(chr2)) {
				enc3 = enc4 = 64;
			} else if (isNaN(chr3)) {
				enc4 = 64;
			}
 
			output = output +
			this._keyStr.charAt(enc1) + this._keyStr.charAt(enc2) +
			this._keyStr.charAt(enc3) + this._keyStr.charAt(enc4);
 
		}
 
		return output;
	},
	_utf8_encode : function (string) {
		string = string.replace(/\r\n/g,"\n");
		var utftext = "";
 
		for (var n = 0; n < string.length; n++) {
 
			var c = string.charCodeAt(n);
 
			if(c < 128) {
				utftext += String.fromCharCode(c);
			}
			else if((c > 127) && (c < 2048)) {
				utftext += String.fromCharCode((c >> 6) | 192);
				utftext += String.fromCharCode((c & 63) | 128);
			}
			else {
				utftext += String.fromCharCode((c >> 12) | 224);
				utftext += String.fromCharCode(((c >> 6) & 63) | 128);
				utftext += String.fromCharCode((c & 63) | 128);
			}
 
		}
 
		return utftext;
	}
}
	var jsn = {};
	jsn.conf = {};
	for(var i = 0; localStorage.key(i); i++){
		jsn.conf[localStorage.key(i)] = localStorage[localStorage.key(i)];
	}
	//return(jsn);
	return(Base64.encode(JSON.stringify(jsn)));
}
function showBackup(){
	var conf = backupConfig();
	document.getElementById('backup').innerHTML = 'This box shows your current configuration. Paste a different one in the box and press "load" to load it<br><input type="text" id="conf" style="width: 95%"><input type="button" onclick="restoreConfig()" value="load">';
	document.getElementById('conf').value = conf;
	console.log(conf);
	document.getElementById('conf').focus();
	document.getElementById('conf').select();
}
function restoreConfig(){
	var Base64 = {
	_keyStr : "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789+/=",
	decode : function (input) {
		var output = "";
		var chr1, chr2, chr3;
		var enc1, enc2, enc3, enc4;
		var i = 0;
 
		input = input.replace(/[^A-Za-z0-9\+\/\=]/g, "");
 
		while (i < input.length) {
 
			enc1 = this._keyStr.indexOf(input.charAt(i++));
			enc2 = this._keyStr.indexOf(input.charAt(i++));
			enc3 = this._keyStr.indexOf(input.charAt(i++));
			enc4 = this._keyStr.indexOf(input.charAt(i++));
 
			chr1 = (enc1 << 2) | (enc2 >> 4);
			chr2 = ((enc2 & 15) << 4) | (enc3 >> 2);
			chr3 = ((enc3 & 3) << 6) | enc4;
 
			output = output + String.fromCharCode(chr1);
 
			if (enc3 != 64) {
				output = output + String.fromCharCode(chr2);
			}
			if (enc4 != 64) {
				output = output + String.fromCharCode(chr3);
			}
 
		}
 
		output = Base64._utf8_decode(output);
 
		return output;
 
	},
	_utf8_decode : function (utftext) {
		var string = "";
		var i = 0;
		var c = c1 = c2 = 0;
 
		while ( i < utftext.length ) {
 
			c = utftext.charCodeAt(i);
 
			if (c < 128) {
				string += String.fromCharCode(c);
				i++;
			}
			else if((c > 191) && (c < 224)) {
				c2 = utftext.charCodeAt(i+1);
				string += String.fromCharCode(((c & 31) << 6) | (c2 & 63));
				i += 2;
			}
			else {
				c2 = utftext.charCodeAt(i+1);
				c3 = utftext.charCodeAt(i+2);
				string += String.fromCharCode(((c & 15) << 12) | ((c2 & 63) << 6) | (c3 & 63));
				i += 3;
			}
 
		}
 
		return string;
	}
	}
	var jsn = JSON.parse(Base64.decode(document.getElementById('conf').value));
	//console.log(jsn);
	for(var i in jsn.conf){
		//console.log(i, jsn.conf[i])
		localStorage[i] = jsn.conf[i];
		//console.log(jsn.conf[jsn.key[i]]);
	}
 	location.reload(true);
}
function save(){
	localStorage['chromeLL_quicklinks'] = document.disable.quicklinks.value;
	localStorage['chromeLL_closentf'] = document.disable.chromeLL_closentf.value;
	localStorage['chromeLL_like'] = document.disable.chromeLL_like.checked;
	localStorage['chromeLL_imgres'] = document.disable.chromeLL_imgres.value;
	localStorage['chromeLL_tchighlightcolor'] = '#' + document.disable.chromeLL_tchighlightcolor.value;
	localStorage['chromeLL_ignoretopics'] = document.disable.chromeLL_ignoretopics.value;
	localStorage['chromeLL_ignoretopicsby'] = document.disable.chromeLL_ignoretopicsby.value;
	localStorage['chromeLL_keywordhl'] = document.disable.chromeLL_keywordhl.value + ';' + document.disable.chromeLL_keywordhlcolor.value;
	localStorage['chromeLL_cssquotes_color'] = document.disable.chromeLL_cssquotes_color.value;
	localStorage['chromeLL_tclabelcolor'] = document.disable.chromeLL_tclabelcolor.value;

	var m = document.getElementsByTagName('input');
	for(var i = 0; m[i]; i++){
		if(m[i].type.toLowerCase() == 'checkbox'){
			localStorage[m[i].name] = m[i].checked;
		}
	}

	var userhighlight = '';
	if(document.disable.user1.value != undefined){
            //console.log('no user');
			userhighlight = document.disable.user1.value + ":" + document.disable.color1.value + ":" + document.disable.color2.value + ":" + document.disable.color3.value + ";";
	}
	else{
			for(var z = 0; z < document.disable.user1.length; z++){
				if(document.disable.user1.item(z).value != ''){
					userhighlight += document.disable.user1.item(z).value + ":" + document.disable.color1.item(z).value + ":" + document.disable.color2.item(z).value + ":" + document.disable.color3[z].value + ";";
				}
			}
	}
	var qr = '';
	if(document.disable.qrtext != undefined){
		if(document.disable.qrtext.value){
				qr = document.disable.qrtext.value + ":$_QRTXTB_$:" + document.disable.qrtitle.value + ";$$_QREND_$$;";
				//console.log(qr);
		}
		else{
				for(var z = 0; z < document.disable.qrtext.length; z++){
					if(document.disable.qrtitle.item(z).value != '' && document.disable.qrtitle.item(z).value != 'title'){
						qr += document.disable.qrtext.item(z).value + ":$_QRTXTB_$:" + document.disable.qrtitle.item(z).value + ";$$_QREND_$$;";
					}
				}
		}
	}
	localStorage['chromeLL_userhighlight'] = userhighlight;
	localStorage['chromeLL_qr'] = qr;
	document.disable.savebutton.value="- - - saving - - -";
	setTimeout('button()', 200);
}
function restoreql(){
	if(document.disable.presets.value == "default"){
		document.disable.quicklinks.value = '<a href="http://boards.endoftheinter.net/showtopics.php?board=42" target="_new">LUE</a> | <a href="http://boards.endoftheinter.net/showtopics.php?board=51" target="_new">PM</a> | <a href="http://boards.endoftheinter.net/showtopics.php?board=58" target="_new">MH</a> | <a href="http://boards.endoftheinter.net/showtopics.php?board=444" target="_new">HA</a>';
	}
	if(document.disable.presets.value == "luesearch"){
		document.disable.quicklinks.value = '<form action="http://boards.endoftheinter.net/search.php" method="get" target="_new"><input type="text" name="s_aw"><input type="hidden" name="board" value="42"><input type="hidden" name="submit" value="Submit"></form>';
	}
	if(document.disable.presets.value == "archives"){
		document.disable.quicklinks.value = '<form method="get" action="http://archives.endoftheinter.net/search.php" target="_new"><input type="hidden" name="board" value="42" /><input type="text" name="s_aw" /><input type="hidden" value="Search" name="submit" /></form>';
	}
}
function qsave(){
    console.log('qsave');
	var userhighlight = '';
	if(document.disable.color1 == undefined){
			adduser();
			return;
	}
	if(document.disable.user1.value){
			userhighlight = document.disable.user1.value + ":" + document.disable.color1.value + ":" + document.disable.color2.value + ":" + document.disable.color3.value + ";";
	}
	else{
			for(var z = 0; z < document.disable.user1.length; z++){
				if(document.disable.user1.item(z).value != ''){
					userhighlight += document.disable.user1[z].value + ":" + document.disable.color1[z].value + ":" + document.disable.color2[z].value + ":" + document.disable.color3[z].value + ";";
				}
			}
	}
	console.log(userhighlight);
	adduser();
	userhl2(userhighlight);
}
